{{> partials/header-view.partial }}
<div class="d-flex flex-column justify-content-center container flex-grow-1">
    <div class="row d-flex justify-content-center align-items-center media-large-form-size-box mx-auto">
        {{#show_banner}}
        <div class="alert {{banner_class}} mb-0" role="alert">
            {{{form.banner_message}}}
        </div>
        {{/show_banner}}
        <div class="card rounded-3 custom-card-padding">
            <form class="row" action="" method="post" novalidate>
                <h3 class="fw-normal mb-5 text-secondary">Rejestracja</h3>
                <div class="col-lg-6 px-4">
                    <div class="row">
                        <div class="col-md-6">
                            <label for="form-name" class="form-label">Imię</label>
                            <input type="text" name="registration-name" class="form-control {{form.v_name.bts_class}}"
                                id="form-name" value="{{form.v_name.value}}" placeholder="np. Jan">
                            <div class="invalid-feedback">Nieprawidłowa wartość!</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="form-surname" class="form-label">Nazwisko</label>
                            <input type="text" name="registration-surname"
                                class="form-control {{form.v_surname.bts_class}}" id="form-surname"
                                value="{{form.v_surname.value}}" placeholder="np. Kowalski">
                            <div class="invalid-feedback">Nieprawidłowa wartość!</div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="form-login" class="form-label">Login</label>
                            <input type="text" name="registration-login" class="form-control {{form.v_login.bts_class}}"
                                id="form-login" value="{{form.v_login.value}}" placeholder="np. jankowalski123">
                            <div class="invalid-feedback">Nieprawidłowa wartość!</div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="form-email" class="form-label">Adres E-mail</label>
                            <input type="text" name="registration-email" class="form-control {{form.v_email.bts_class}}"
                                id="form-email" value="{{form.v_email.value}}" placeholder="np. jankowalski@email.pl">
                            <div class="invalid-feedback">Nieprawidłowa wartość!</div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="form-password" class="form-label">Hasło</label>
                            <div class="input-group has-validation">
                                <input type="password" name="registration-password" placeholder="minimum 8 znaków"
                                    class="form-control {{form.v_password.bts_class}}" id="form-password">
                                <button type="button" class="input-group-text password-input-toggler">
                                    <span class="material-symbols-outlined">visibility</span>
                                </button>
                                <div class="invalid-feedback">Nieprawidłowa wartość!</div>
                            </div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="form-repeat-password" class="form-label">Powtórz hasło</label>
                            <div class="input-group has-validation">
                                <input type="password" name="registration-password-rep" placeholder="minimum 8 znaków"
                                    class="form-control {{form.v_password_rep.bts_class}}" id="form-repeat-password">
                                <button type="button" class="input-group-text password-input-toggler">
                                    <span class="material-symbols-outlined">visibility</span>
                                </button>
                                <div class="invalid-feedback">Nieprawidłowa wartość!</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 px-4">
                    <div class="mb-3">
                        <label for="form-role" class="form-label">Wybierz typ konta</label>
                        <select id="form-role" class="form-select registration-form-select" name="registration-role">
                            <option value="1">Klient</option>
                            <option value="2">Restaurator</option>
                        </select>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="form-building" class="form-label">Nr budynku</label>
                            <input type="text" name="registration-building-number"
                                class="form-control {{form.v_building_no.bts_class}}" id="form-building"
                                value="{{form.v_building_no.value}}" placeholder="np. 65">
                            <div class="invalid-feedback">Nieprawidłowa wartość!</div>
                        </div>
                        <div class="col-md-6">
                            <label for="form-locale" class="form-label">Nr mieszkania</label>
                            <input type="text" name="registration-local-number"
                                class="form-control {{form.v_locale_no.bts_class}}" id="form-locale"
                                value="{{form.v_locale_no.value}}" placeholder="np. 12c">
                            <div class="invalid-feedback">Nieprawidłowa wartość!</div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="form-post-code" class="form-label">Kod pocztowy</label>
                            <input type="text" name="registration-post-code"
                                class="form-control {{form.v_post_code.bts_class}}" id="form-post-code"
                                value="{{form.v_post_code.value}}" placeholder="np. 43-100">
                            <div class="invalid-feedback">Nieprawidłowa wartość!</div>
                        </div>
                        <div class="col-md-6">
                            <label for="form-city" class="form-label">Miasto</label>
                            <input type="text" name="registration-city" class="form-control {{form.v_city.bts_class}}"
                                id="form-city" value="{{form.v_city.value}}" placeholder="np. Gliwice">
                            <div class="invalid-feedback">Nieprawidłowa wartość!</div>
                        </div>
                    </div>
                    <div class="col-md-12 mb-4">
                        <label for="form-street" class="form-label">Ulica</label>
                        <input type="text" name="registration-street" class="form-control {{form.v_street.bts_class}}"
                            id="form-street" value="{{form.v_street.value}}" placeholder="np. Długa">
                        <div class="invalid-feedback">Nieprawidłowa wartość!</div>
                    </div>
                    <button type="submit" name="registration-button" class="btn btn-dark btn-md w-100 py-2 app-primary-button">
                        Zarejestruj
                    </button>
                    <div class="d-flex justify-content-center align-items-center mt-4">
                        <a class="pe-3 text-muted" href="index.php?action=auth/login">Posiadam już konto</a>
                        &#9642;
                        <a class="ps-3 text-muted" href="index.php?action=auth/password/renew/request">Zapomniałem hasła</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{{> partials/footer-view.partial }}
