{{> partials/header-view.partial }}

<section class="h-100 h-custom">
    <div class="container py-5 h-100 registration-box">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-6">
                <form class="row g-3" action="" method="post" novalidate>
                    {{#show_banner}}
                        <div class="alert {{banner_class}} mb-0" role="alert">
                            {{{form.banner_message}}}
                        </div>
                    {{/show_banner}}
                    <div class="card card-registration card-registration-2" style="border-radius: 15px;">
                        <div class="card-body p-0">
                            <div class="row g-0">
                                <div class="p-5">
                                    <h3 class="fw-normal mb-4 registration-heading">Resetuj hasło</h3>
                                    
                                    <p class="form-paragraph mb-4">
                                        Aby zresetować hasło, wprowadź w poniższym polu adres email lub login przypisany do Twojego konta.
                                        Po kliknięciu, na adres email powiązany z kontem przyjdzie link aktywacyjny.
                                    </p>

                                    <div class="col-md-12 mb-4">
                                        <label for="form-login" class="form-label">Login lub adres email</label>
                                        <input type="text" name="login_email" value="{{form.v_login_email.value}}" placeholder="Podaj login lub adres e-mail"
                                            class="form-control {{form.v_login_email.bts_class}}" id="form-login" required>
                                        <div class="invalid-feedback">Podaj prawidłową wartość!</div>
                                    </div>

                                    <button type="submit" name="form-send-request-change-pass" class="btn btn-dark btn-md">Resetuj hasło</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </form>
    </div>
    </div>
</section>

{{> partials/footer-view.partial }}
