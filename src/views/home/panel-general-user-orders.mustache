<nav class="mb-4" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{base_dir}}restaurant/panel/dashboard">Panel główny</a></li>
        <li class="breadcrumb-item active" aria-current="page">Historia zamówień</li>
</nav>
{{#banner.show_banner}}
<div class="alert {{banner.banner_class}} mb-3 alert-dismissible fade show" role="alert">
    {{{banner.banner_message}}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/banner.show_banner}}
<div class="container-fluid px-0">
    <div class="col-lg-6 mb-3"><h2 class="text-secondary fw-light mb-0">Profil Użytkownika</h2></div>
</div>
<div class="table-responsive-xxl">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    <div class="card" style="width: xxl;">
                        <div class="card-body">
                            <h5 class="card-title">Restauracja</h5>
                            <p class="card-text"> Opis zamówienia</p>
                            <div class="d-flex justify-content-end">
                                <p class="m-2">Kwota</p>
                            </div>
                        </div>
                    </div>
                </th>
            </tr>
        </thead>
        <tbody>
            {{#data.restaurant_dish}}
            <tr>
                <th>
                    <div class="card" style="width: 40rem;">
                        <div class="card-body">
                            <h5 class="align-middle">{{res.name}}</h5>
                            <p class="align-middle d-none d-lg-table-cell">{{zamowione danie}}</p>
                            <div class="d-flex justify-content-end">
                                <p class="align-middle">{{price}}</p>
                            </div>
                        </div>
                    </div>
                </th>
            </tr>
            {{/data.restaurant_dish}}
        </tbody>
    </table>
</div>
{{#data.pagination_visible}}
    {{> partials/pagination-view.partial}}
{{/data.pagination_visible}}
