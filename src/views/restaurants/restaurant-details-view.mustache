{{> partials/header-view.partial }}
<main class="container-lg flex-grow-1 top-margin-header md-3 mb-4 d-flex">
    <div class="col-md-8 mx-2">
        <form class="col-sm-12 mb-2 d-flex justify-content-end" action="" method="get">
            <input type="search" name="search" placeholder="Wyszukaj po nazwie" class="form-control">
            <button type="submit" class="btn btn-primary btn-md ms-1 py-1"><i class="bi bi-search"></i></button>
        </form>
        <div class="d-flex">
            <div class="mx-1 my-2">
                {{#data.dishTypes}}
                <a href="{{base_dir}}restaurants/restaurant-details?id={{data.res_id}}#{{type.dishType_nav}}"
                    type="button" class="btn btn-outline-secondary btn-sm"> {{type.dishType_name}} </a>
                {{/data.dishTypes}}
            </div>
        </div>
        {{#data.dishTypes}}
        <h4 id="{{type.dishType_nav}}" class="form-check-label">{{type.dishType_name}} </h4>
        {{#list}}
        <div class="card mx-2">
            <div class="d-flex row h-100 mx-0">
                <div
                    class="col-md-2 p-0 position-relative d-flex align-items-center justify-content-md-start justify-content-center">
                    {{#photo_url}}
                    <img src="{{base_dir}}public/{{photo_url}}" alt="" class="rounded ms-0 ms-md-4 position-relative"
                        width="100px" height="100px" />
                    {{/photo_url}}
                    {{^photo_url}}
                    <img src="{{base_dir}}public/static/images/default-profile.jpg" alt=""
                        class="rounded ms-0 ms-md-4 position-relative" width="100px" height="100px" />
                    {{/photo_url}}
                </div>
                <div class="col-md-8 p-3">
                    <h2 class="card-title fw-normal fs-4">{{dish_name}}</h2>
                    <p class="fs-6 text-secondary"> {{description}}</p>
                    <div class="hstack gap-3">
                        <div class="hstack gap-2"><i class="bi bi-bicycle fs-4 text-success"></i>{{price}} zł</div>
                        <div class="hstack gap-2"><i class="bi bi-clock text-primary"></i>{{prepared_time}} min</div>
                    </div>
                </div>
                    <div class="col text-end">
                        <a href="{{base_dir}}restaurants/add_dish?resid={{data.res_id}}&dishid={{id}}" >
                            <i class="bi bi-plus text-success fs-2"></i></a>
                    </div>
            </div>
        </div>
        {{/list}}
        {{/data.dishTypes}}
        {{^data.dishTypes}}
        <div class="alert alert-warning mb-3 my-4" role="alert">
            Nie znaleziono żadnych dań na podstawie danej restauracji. Jeśli uważasz, że to błąd, zgłoś to do Nas
            przedząc pod <a href="{{base_dir}}contact-form" class="alert-link">ten adres</a> lub napisz do nas na <a
                href="mailto:info@restaurants.miloszgilga.pl" class="alert-link">info@restaurants.miloszgilga.pl</a>
        </div>
        {{/data.dishTypes}}
    </div>
    <div class="col-md-3 mb-4 d-flex">
        <div class="col-md w-100">
            <div action="" method="post" class="sticky-top panel-left-nav">
                <ul class="list-group">
                    {{#data.shoppingCard}}
                    <li class="list-group-item">
                        <div class="d-flex row p-2">
                            <div class="col text-start">
                                <p class="card-title fw-normal">{{list.name}}</p>
                                <p class="text-secondary">{{list.description}}</p>
                            </div>
                            <div class="col  text-end">
                                <p>{{list.price}}</p> 
                            </div>
                            <div class="hstack gap-3 d-flex">
                                <div>
                                    <a href="{{base_dir}}restaurants/add_dish?resid={{data.res_id}}&dishid={{list.id}}&act=0">
                                    <i class="bi bi-dash-circle fs-2 text-danger"></i></a>
                                </div>
                                <div class="d-flex align-self-end">
                                    <p>{{il}}</p>
                                </div>
                                <div>
                                    <a href="{{base_dir}}restaurants/add_dish?resid={{data.res_id}}&dishid={{list.id}}&act=1">
                                    <i class="bi bi-plus-circle text-succte diodess fs-2"></i></a>
                                </div>
                            </div>
                        </div>
                        {{/data.shoppingCard}}
                    </li>
                </ul>
                <div class="text-center mt-4">
                    <p>{{data.dishesSum}} + {{data.deliverySum}} zł</p>
                </div>
                <button type="button" class="btn btn-success w-100">Kasa</button>
            </div>
        </div>
    </div>
    <div class="sticky-top col mx-2">
        
    </div>
</main>
{{> partials/footer-view.partial }}
