{{> partials/header-view.partial }}
<main class="container-xl flex-grow-1">
    {{#banner.show_banner}}
    <div class="alert {{banner.banner_class}} mb-3 alert-dismissible fade show" role="alert">
        {{{banner.banner_message}}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/banner.show_banner}}
    <div class="table-responsive-xxl">
        <table class="table table-striped">
            <thead>
                <tr>
                    <br><br><br>
                    <h4>Adres dostawy</h4>
                    <div class="card p-3">
                        <div class="card-body">
                            <div class="row p-2">
                                <div class="col-md-12 mb-4">
                                    <label for="form-street" class="form-label">Ulica</label>
                                    <input type="text" name="registration-street"
                                        class="form-control {{form.v_street.bts_class}}" id="form-street"
                                        value="{{form.v_street.value}}" placeholder="np. Długa">
                                    <div class="invalid-feedback">Nieprawidłowa wartość!</div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="form-building" class="form-label">Nr budynku</label>
                                        <input type="text" name="registration-building-number"
                                            class="form-control {{form.v_building_no.bts_class}}" id="form-building"
                                            value="{{form.v_building_no.value}}" placeholder="np. 65">
                                        <div class="invalid-feedback">Nieprawidłowa wartość!</div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="form-locale" class="form-label">Nr mieszkania</label>
                                        <input type="text" name="registration-local-number"
                                            class="form-control {{form.v_locale_no.bts_class}}" id="form-locale"
                                            value="{{form.v_locale_no.value}}" placeholder="np. 12c">
                                        <div class="invalid-feedback">Nieprawidłowa wartość!</div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="form-post-code" class="form-label">Kod pocztowy</label>
                                        <input type="text" name="registration-post-code"
                                            class="form-control {{form.v_post_code.bts_class}}" id="form-post-code"
                                            value="{{form.v_post_code.value}}" placeholder="np. 43-100">
                                        <div class="invalid-feedback">Nieprawidłowa wartość!</div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="form-city" class="form-label">Miasto</label>
                                        <input type="text" name="registration-city"
                                            class="form-control {{form.v_city.bts_class}}" id="form-city"
                                            value="{{form.v_city.value}}" placeholder="np. Gliwice">
                                        <div class="invalid-feedback">Nieprawidłowa wartość!</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </tr>
                <br>
                <tr>
                    <h4>Dostawa</h4>
                    <div class="card p-3">
                        <div class="card-body">
                            <div class="row p-2">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="flexRadioDefault">
                                            <label class="form-check-label" for="flexRadioDefault1">
                                                Odbiór osobisty
                                            </label>
                                        </div>
    
                                    </div>
                                </div>
                            </div>
                            <div class="row p-2">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="flexRadioDefault" checked>
                                            <label class="form-check-label" for="flexRadioDefault2">
                                                Dostawa kurierem
                                            </label>
                                        </div>
                                    </div>
                                </div>
    
                            </div>
                        </div>
                    </div>
                </tr>
                <br>
                <tr>
                    <h4>Rodzaj płatności</h4>
                    <div class="card p-3">
                        <div class="card-body">
                            <div class="row p-2">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="flexRadioDefault3"
                                                id="flexRadioDefault3">
                                            <label class="form-check-label" for="flexRadioDefault1">
                                                Płatność przy odbiorze
                                            </label>
                                        </div>
    
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </tr>
                <br>
                <tr>
                    <a href="{{base_dir}}user/orders" data-bs-toggle="modal" data-bs-target="#discount-code"
                        class="btn btn-primary" type="button">Dodaj kupon</a>
    
                    <div class="modal fade" id="discount-code" data-bs-backdrop="static" data-bs-keyboard="false"
                        tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Kod rabatowy</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form>
                                        <div class="mb-3">
                                            <label for="example" class="form-label">Kod rabatowy</label>
                                            <input type="discound" class="form-control" id="exampleInput1"
                                                aria-describedby="" placeholder="Podaj kod promocyjny">
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-success" data-bs-dismiss="modal">Aktywuj</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </tr>
                <div class="row p-4 ms-5">
                    <a href="{{base_dir}}home/general/user/orders" class="btn btn-primary" style="width: 60%;"
                        type="button">Przejdź do
                        podsumowania (kwota 69.99zł)</a>
                </div>
            </thead>
        </table>
    </div>
</main>
{{> partials/footer-view.partial }}
